<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical">

        <!--imageview za sliko, upload slike, pa selector za preddefinirane trgovine (morda lokalno)-->

        <ImageView
            android:id="@+id/ivSlikaKartice"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:layout_width="250dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/default_card" />

        <TextView
            android:id="@+id/tvStevilkaKartice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stevilkaKartice"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivNewScan"
                android:layout_width="50dp"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_height="50dp" />
            <EditText
                android:id="@+id/etStevilkaKartice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvImeTrgovine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imeTrgovine"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etImeTrgovine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnDodajKartico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addCard"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KarticeActivity">

    <TextView
        android:id="@+id/tvCreateAccLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:text="@string/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tvUsernameKartice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="59dp"
        android:text="@string/username" />

    <EditText
        android:id="@+id/etUsernameKartice"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameKartice"
        android:layout_alignStart="@+id/tvCreateAccLog"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>